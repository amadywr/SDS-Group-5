<% layout('layout')%> <% layout('layout')%>

<section class="course-recommender-section">
  <header class="cr-header">
    <a href="/" class="cr-logo container">UTS</a>
  </header>

  <div>
    <div class="rc-top-div container">
      <h1>Course Recommender</h1>

      <p>
        Pick any titles from area of interest and our program will recommend
        courses that best suits you
      </p>
    </div>
    

    
    

    <hr class="rc-line" />

    <form accept="/recommender" method="post" class="container">

      
     <h1 class="rc-study-level">Study Level</h1>

      <div>
        <input type="radio" id="contactChoice1"
         name="contact" value="email">
        <label for="contactChoice1">Email</label>
  
        <input type="radio" id="contactChoice2"
         name="contact" value="phone">
        <label for="contactChoice2">Phone</label>
  
        <input type="radio" id="contactChoice3"
         name="contact" value="mail">
        <label for="contactChoice3">Mail</label>
      </div>

      <h1 class="rc-poi">Points of interest</h1>

      <div class="cr-form">
        <% for(let i=0; i<fields.length; i++){ %>
          <div class="rc-form-checkbox">
            <input
              type="checkbox"
              id="<%= fields[i] %>"
              name="<%= fields[i] %>"
              value="<%= fields[i] %>"
            />
            <label for="<%= fields[i] %>"><%= fields[i] %></label>
          </div>
        <% } %>
      </div>
      

      <input type="submit" value="SUBMIT" class="primary-btn rc-form-submit" />
    </form>
    
  </div>
</section>
